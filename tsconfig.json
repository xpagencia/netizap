{
  "compilerOptions": {
    "target": "ES2018",                            
    "module": "commonjs",  
    "lib": [
      "ES6"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",    
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "strict": true,                             
    "baseUrl": "./",                         
    "paths": {
      "@models/*": [
        "./src/models/*"
      ],
      "@env/*": [
        "./env/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
      "@controllers/*":[
        "./src/controllers/*"
      ],
      "@libs/*": [
        "./src/libs/*"
      ],
    },                             
    "esModuleInterop": true,                    
    "skipLibCheck": true,                       
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}
